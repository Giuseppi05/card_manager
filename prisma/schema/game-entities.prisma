model Game {
    id          String       @id @default(cuid())
    name        String
    image       String?
    generations Generation[]
    users UserGame[]
}

model Generation {
    id         String      @id @default(cuid())
    name       String
    image      String?
    logo       String?
    gameId     String
    isActive   Boolean     @default(false)
    game       Game        @relation(fields: [gameId], references: [id])
    expansions Expansion[]
}

model Expansion {
    id           String     @id @default(cuid())
    name         String
    logo         String?
    generationId String
    isActive     Boolean    @default(false)
    generation   Generation @relation(fields: [generationId], references: [id])
    cards        Card[]
}

model UserGame {
    id     String @id @default(cuid())
    userId String
    gameId String
    game   Game   @relation(fields: [gameId], references: [id])
}